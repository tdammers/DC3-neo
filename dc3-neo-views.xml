<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <chase-distance-m type="double">-30</chase-distance-m>

  <view n="0">
    <name>Pilot</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <pitch-offset-deg>0</pitch-offset-deg>
      <x-offset-m>-0.45</x-offset-m> <!-- Right -->
      <y-offset-m>0.45</y-offset-m> <!-- Up    -->
      <z-offset-m>-7.9</z-offset-m> <!-- Back  -->
      <pitch-offset-deg>-17.5</pitch-offset-deg>
    </config>
  </view>

  <view n="100">
    <name>Passenger</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <pitch-offset-deg>-5</pitch-offset-deg>
      <x-offset-m>0.274</x-offset-m> <!-- Right -->
      <y-offset-m>0.198</y-offset-m> <!-- Up    -->
      <z-offset-m>-3.367</z-offset-m> <!-- Back  -->
      <pitch-offset-deg>0</pitch-offset-deg>
      <default-field-of-view-deg>55</default-field-of-view-deg>
    </config>
  </view>

  <view n="101">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
