      <y-offset-m>0.503</y-offset-m> <!--Up-->
      <z-offset-m>-7.126</z-offset-m> <!--Back-->
      <pitch-offset-deg>-15</pitch-offset-deg>
      <default-field-of-view-deg type="double">60</default-field-of-view-deg>
    </config>
  </view>

  <view n="103">
