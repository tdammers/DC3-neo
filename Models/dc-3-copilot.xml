<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>copilot.ac</path>
 
  <nasal>
    <load>
      cmdarg().getNode("sim/model/ac-type", 1).setValue("dc-3-copilot");
    </load>
    <unload>
      cmdarg().getNode("sim/model/ac-type", 1).setValue("");
    </unload>
  </nasal>

  <!-- Copilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/copilot.xml</path>
    <offsets>
      <x-m> -8.190 </x-m>
      <y-m>  0.424 </y-m>
      <z-m> -0.150 </z-m>
    </offsets>
  </model>

</PropertyList>
