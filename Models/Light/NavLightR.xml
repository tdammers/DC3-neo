<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>GreenLight.ac</path>

  <animation>
    <object-name>Light</object-name>
    <type>noshadow</type>
  </animation>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Light</object-name>
  </effect>
  
  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>
  
  <animation>
    <type>billboard</type>
    <object-name>Light</object-name>
    <spherical type="bool">true</spherical>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Light</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/running-lights[1]</factor-prop>
      <red>   0 </red>
      <green> 2 </green>
      <blue>  0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>dist-scale</type>
    <object-name>Light</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep> 0.25 </dep></entry>
      <entry><ind>   20 </ind><dep> 0.50 </dep></entry>
      <entry><ind> 1500 </ind><dep> 5.00 </dep></entry>
    </interpolation>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Light</object-name>
    <object-name>CompositorCone</object-name>
    <condition>
      <and>
        <property>sim/multiplay/generic/int[10]</property>
        <greater-than>
          <property>systems/electrical/buses/bus[1]/volts</property>
          <value>8</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <light>
    <type>spot</type>
    <name>CompositorCone</name>
    <position>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </position>
    <direction>
        <heading-deg>-60</heading-deg>
        <roll-deg>0</roll-deg>
        <pitch-deg>80</pitch-deg>
    </direction>
    <ambient>
        <r>0.1</r>
        <g>1.0</g>
        <b>0.0</b>
        <a>1.0</a>
    </ambient>
    <diffuse>
        <r>0.1</r>
        <g>1.0</g>
        <b>0.0</b>
        <a>0.7</a>
    </diffuse>
    <specular>
        <r>0.1</r>
        <g>1.0</g>
        <b>0.0</b>
        <a>0.7</a>
    </specular>
    <dim-factor>
        <!-- <property>sim/multiplay/generic/int[10]</property> -->
        <factor>1</factor>
        <offset>0</offset>
        <min>0</min>
        <max>1</max>
    </dim-factor>
    <attenuation>
        <c>0.6</c>
        <l>0.2</l>
        <q>0.04</q>
    </attenuation>
    <color>
        <r>0.1</r>
        <g>1.0</g>
        <b>0.0</b>
    </color>
    <intensity>50000</intensity>
    <spot-exponent>4</spot-exponent>
    <spot-cutoff>60.0</spot-cutoff>
    <range-m>1000</range-m>
    <near-m>0.1</near-m>
    <far-m>500</far-m>
  </light>
  
</PropertyList>
