<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>light-cone.ac</path>
  <model>
      <path>WhiteLight.ac</path>
      <offsets>
        <x-m>-0.1</x-m>
      </offsets>
  </model>
  <nopreview/>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
    <object-name>Light</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/light-cone</inherits-from>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
    <object-name>Light</object-name>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Light</object-name>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/landing-lights[0]</factor-prop>
      <red>1</red>
      <green>1</green>
      <blue>1</blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/int[17]</property>
        <value> 1 </value>
      </equals>
      <property>sim/model/config/light-cone</property>
    </condition>
    <alpha-factor>systems/electrical/outputs/landing-lights[0]</alpha-factor>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Light</object-name>
    <condition>
      <and>
        <equals>
          <property>sim/multiplay/generic/int[17]</property>
          <value> 1 </value>
        </equals>
        <greater-than>
          <property>systems/electrical/buses/bus[0]/volts</property>
          <value>8</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>alpha-test</type>
    <object-name>Light</object-name>
    <alpha-factor>0.05</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>Light</object-name>
    <spherical type="bool">true</spherical>
  </animation>
  
  <animation>
    <type>dist-scale</type>
    <object-name>Light</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep> 1.00 </dep></entry>
      <entry><ind>   20 </ind><dep> 1.50 </dep></entry>
      <entry><ind> 1500 </ind><dep> 5.00 </dep></entry>
    </interpolation>
  </animation>

  <animation>
    <type>select</type>
    <object-name>CompositorCone</object-name>
    <condition>
      <equals>
        <property>sim/multiplay/generic/int[17]</property>
        <value> 1 </value>
      </equals>
    </condition>
  </animation>

  <light>
    <type>spot</type>
    <name>CompositorCone</name>
    <position>
        <x-m>1</x-m>
        <y-m>0</y-m>
        <z-m>0</z-m>
    </position>
    <direction>
        <heading-deg>0</heading-deg>
        <roll-deg>0</roll-deg>
        <pitch-deg>90</pitch-deg>
    </direction>
    <ambient>
        <r>1.0</r>
        <g>1.0</g>
        <b>0.8</b>
        <a>1.0</a>
    </ambient>
    <diffuse>
        <r>1.0</r>
        <g>1.0</g>
        <b>0.8</b>
        <a>0.7</a>
    </diffuse>
    <specular>
        <r>1.0</r>
        <g>1.0</g>
        <b>0.8</b>
        <a>0.7</a>
    </specular>
    <dim-factor>
        <property>systems/electrical/outputs/landing-lights[0]</property>
        <factor>1</factor>
        <offset>0</offset>
        <min>0</min>
        <max>1</max>
    </dim-factor>
    <attenuation>
        <c>0.5</c>
        <l>0.01</l>
        <q>0.00005</q>
    </attenuation>
    <color>
        <r>1.0</r>
        <g>1.0</g>
        <b>0.8</b>
    </color>
    <intensity>200000</intensity>
    <spot-exponent>180</spot-exponent>
    <spot-cutoff>15.0</spot-cutoff>
    <range-m>1000</range-m>
    <near-m>0.1</near-m>
    <far-m>500</far-m>
  </light>

</PropertyList>
