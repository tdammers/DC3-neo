<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <path>Aircraft/Douglas-Dc3/Models/Interior/Cockpit/Overhead/Instruments/ignition/ignition.xml</path>
  </model>

  <text>
    <name>magnetoL</name>
    <type type="string">literal</type>
    <text type="string">  Magneto Left        -     +</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.006</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.04</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.006 </x-m>
      <y-m> -0.032 </y-m>
      <z-m>  0.013 </z-m>
    </offsets>
  </text>

  <text>
    <name>magnetoR</name>
    <type type="string">literal</type>
    <text type="string">Magneto Right   +    -</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.006</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.04</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.006 </x-m>
      <y-m>  0.032 </y-m>
      <z-m>  0.013 </z-m>
    </offsets>
  </text>

  <text>
    <name>url</name>
    <type type="string">literal</type>
    <text type="string">http://equipe-flightgear.forumactif.com</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.008</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.15</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.015 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.080 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>magnetoL</object-name>
    <object-name>magnetoR</object-name>
    <object-name>url</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>magnetoL</object-name>
    <object-name>magnetoR</object-name>
    <object-name>url</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
