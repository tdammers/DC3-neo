<PropertyList>

    <path>hi.ac</path>

    <animation>
        <object-name>fond</object-name>
        <object-name>face</object-name>
        <object-name>front</object-name>
        <object-name>HdgBug</object-name>
        <object-name>OBS-Knob</object-name>
        <object-name>clic-offset-L</object-name>
        <object-name>clic-offset-R</object-name>
        <object-name>Hdg-Knob</object-name>
        <object-name>clic-bug-L</object-name>
        <object-name>clic-bug-R</object-name>
        <object-name>mount.001</object-name>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>noshadow</type>
        <object-name>vitre</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>backlight</object-name>
        <object-name>click-bug-L</object-name>
        <object-name>click-bug-R</object-name>
        <object-name>click-offset-l</object-name>
        <object-name>click-offset-R</object-name>
        <object-name>mount.001</object-name>
        <emission>
          <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
          <red>   0.50 </red>
          <green> 0.25 </green>
          <blue>  0.25 </blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Hdg-Knob</object-name>
        <object-name>OBS-Knob</object-name>
        <object-name>HdgBug</object-name>
        <object-name>face</object-name>
        <object-name>front</object-name>
        <object-name>robin</object-name>
        <emission>
          <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
          <red>   0.50 </red>
          <green> 0.25 </green>
          <blue>  0.25 </blue>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>face</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>indicated-heading</tooltip-id>
                <label>Heading: %3d deg</label>
                <mapping>heading</mapping>
                <property>instrumentation/heading-indicator/indicated-heading-deg</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Hdg-Knob</object-name>
        <object-name>OBS-Knob</object-name>
        <object-name>front</object-name>
        <object-name>HdgBug</object-name>
        <object-name>face</object-name>
        <object-name>mount</object-name>
        <object-name>robin</object-name>
        <emission>
          <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
          <red>   0.50 </red>
          <green> 0.25 </green>
          <blue>  0.25 </blue>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>face</object-name>
        <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
        <factor>-1</factor>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>HdgBug</object-name>
        <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
        <factor>-1</factor>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>HdgBug</object-name>
        <property>instrumentation/heading-indicator/heading-bug-deg</property>
        <axis>
            <x> -1 </x>
            <y>  0 </y>
            <z>  0 </z>
        </axis>
    </animation>

    <!--     Heading Bug control    -->
    <animation>
        <type>knob</type>
        <object-name>Hdg-Knob</object-name>  
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/heading-indicator/heading-bug-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <!-- faster rate of change than the default -->
        <drag-scale-px>4</drag-scale-px>
        <shift-repeat type="int">5</shift-repeat>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>heading-bug</tooltip-id>
                <mapping>heading</mapping>
                <label>Heading Bug: %3d deg</label>
                <property>instrumentation/heading-indicator/heading-bug-deg</property>
        </binding>
        </hovered>
    </animation>

    <!--             Heading Offset             -->
    <animation>
        <type>knob</type>
        <object-name>OBS-Knob</object-name>  
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/heading-indicator/offset-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <!-- faster rate of change than the default -->
        <drag-scale-px>4</drag-scale-px>
        <shift-repeat type="int">5</shift-repeat>
