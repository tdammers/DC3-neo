<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>ADI84A.ac</path>
    
    <effect>
        <inherits-from>Effects/model-combined</inherits-from>
        <object-name>AircraftMarker</object-name>
        <object-name>BankIndicator.Marker</object-name>
        <object-name>BankIndicator.Support</object-name>
        <object-name>Case.Body</object-name>
        <object-name>Case.Bottom</object-name>
        <object-name>Case.CornerB</object-name>
        <object-name>Case.CornerTL</object-name>
        <object-name>Case.CornerTR</object-name>
        <object-name>Case.Front</object-name>
        <object-name>Case.FrontMask</object-name>
        <object-name>Case.MidMask</object-name>
        <object-name>Case.RearMask</object-name>
        <object-name>FD</object-name>
        <object-name>FD.Bars</object-name>
        <object-name>Flag.Computer</object-name>
        <object-name>Flag.GS</object-name>
        <object-name>Flag.Gyro</object-name>
        <object-name>Flag.RadAlt</object-name>
        <object-name>GS.Marker</object-name>
        <object-name>Horizon.Drum</object-name>
        <object-name>Horizon.Fixed</object-name>
        <object-name>LOC.Frame</object-name>
        <object-name>LOC.Shutter</object-name>
        <object-name>LOC.Tape</object-name>
        <object-name>Slip.Backplate</object-name>
        <object-name>Slip.Case</object-name>
        <object-name>Slip.Marks</object-name>
        <object-name>Slip.TubeBack</object-name>
        <object-name>SlipSkid.Ball</object-name>
        <object-name>SlipSkid.ScrewL</object-name>
        <object-name>SlipSkid.ScrewR</object-name>
    </effect>
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>Case.Glass</object-name>
        <object-name>Slip.Tube</object-name>
        <object-name>Horizon.Drum.AO</object-name>
    </effect>
    
    <animation>
        <type>material</type>
        <object-name>Case.Glass</object-name>
        <object-name>Slip.Tube</object-name>
        <transparency>
            <alpha>0.1</alpha>
        </transparency>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>Horizon.Drum</object-name>
        <object-name>Horizon.Fixed</object-name>
        <emission>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
            <red>   0.06 </red>
            <green> 0.06 </green>
            <blue>  0.05 </blue>
        </emission>
    </animation>
    <animation>
        <type>material</type>
        <object-name>AircraftMarker</object-name>
        <object-name>BankIndicator.Marker</object-name>
        <object-name>BankIndicator.Support</object-name>
        <object-name>FD</object-name>
        <object-name>FD.Bars</object-name>
        <emission>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
            <red>   0.05 </red>
            <green> 0.05 </green>
            <blue>  0.0375 </blue>
        </emission>
    </animation>
    <animation>
        <type>material</type>
        <object-name>Case.FrontMask</object-name>
        <object-name>Case.MidMask</object-name>
        <object-name>Case.RearMask</object-name>
        <object-name>Flag.Computer</object-name>
        <object-name>Flag.GS</object-name>
        <object-name>Flag.Gyro</object-name>
        <object-name>Flag.RadAlt</object-name>
        <object-name>GS.Marker</object-name>
        <object-name>Horizon.Drum</object-name>
        <object-name>Horizon.Fixed</object-name>
        <object-name>LOC.Frame</object-name>
        <object-name>LOC.Shutter</object-name>
        <object-name>LOC.Tape</object-name>
        <object-name>Slip.TubeBack</object-name>
        <emission>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
            <red>   0.04 </red>
            <green> 0.04 </green>
            <blue>  0.03 </blue>
        </emission>
    </animation>
    <animation>
        <type>material</type>
        <object-name>Slip.Backplate</object-name>
        <object-name>Slip.Case</object-name>
        <object-name>Slip.Marks</object-name>
        <object-name>SlipSkid.Ball</object-name>
        <object-name>SlipSkid.ScrewL</object-name>
        <object-name>SlipSkid.ScrewR</object-name>
        <object-name>Case.CornerB</object-name>
        <object-name>Case.CornerTL</object-name>
        <object-name>Case.CornerTR</object-name>
        <object-name>Case.FrontMask</object-name>
        <emission>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
            <red>   0.02 </red>
            <green> 0.02 </green>
            <blue>  0.015 </blue>
        </emission>
    </animation>
    
    
    <animation>
        <type>rotate</type>
        <object-name>Horizon.Drum</object-name>
        <object-name>Horizon.Fixed</object-name>
        <object-name>Horizon.Drum.AO</object-name>
        <object-name>BankIndicator.Marker</object-name>
        <object-name>BankIndicator.Support</object-name>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
        <factor>1</factor>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>Horizon.Drum</object-name>
        <center>
            <x-m>-0.0498</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
        <factor>1.6667</factor>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>FD</object-name>
        <object-name>FD.Bars</object-name>
        <center>
            <x-m>-0.0498</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <expression>
            <property>autopilot/fd/pitch-deg</property>
        </expression>
        <factor>1.6667</factor>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>FD</object-name>
        <object-name>FD.Bars</object-name>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <expression>
            <property>autopilot/fd/roll-deg</property>
        </expression>
        <factor>1</factor>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>SlipSkid.Ball</object-name>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0.05</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
        <min-deg>-10</min-deg>
        <max-deg>10</max-deg>
        <factor>-10</factor>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>GS.Marker</object-name>
        <center>
            <x-m>0.2</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <property>instrumentation/nav[0]/gs-needle-deflection-norm</property>
        <min-deg>-5</min-deg>
        <max-deg>5</max-deg>
        <factor>20</factor>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>LOC.Tape</object-name>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <property>instrumentation/nav[0]/heading-needle-deflection-norm</property>
        <interpolation>
            <entry>
                <ind>-1</ind>
                <dep>-0.01425</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0.01425</dep>
            </entry>
        </interpolation>
    </animation>

    <animation>
        <type>select</type>
        <object-name>Flag.Computer</object-name>
        <condition>
            <less-than>
                <property>autopilot/century/active</property>
                <value>0.5</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>Flag.Gyro</object-name>
        <condition>
            <less-than>
                <property>instrumentation/attitude-indicator/spin</property>
                <value>0.6</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>LOC.Shutter</object-name>
        <condition>
            <not>
                <and>
                    <property>instrumentation/nav[0]/frequencies/is-localizer-frequency</property>
                    <property>instrumentation/nav[0]/in-range</property>
                </and>
            </not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>Flag.GS</object-name>
        <condition>
            <not>
                <and>
                    <property>instrumentation/nav[0]/frequencies/is-localizer-frequency</property>
                    <property>instrumentation/nav[0]/in-range</property>
                    <property>instrumentation/nav[0]/has-gs</property>
                    <property>instrumentation/nav[0]/gs-in-range</property>
                </and>
            </not>
        </condition>
    </animation>
    
</PropertyList>
