<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>dc-3.ac</path>

  <!-- MP sound call -->
  <sound>
    <path>Aircraft/DC3-neo/Sounds/mp-sound.xml</path>
  </sound>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG1</object-name>
    <object-name>voletG2</object-name>
    <object-name>voletD1</object-name>
    <object-name>voletD2</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteurs</object-name>
    <object-name>air</object-name>
    <object-name>porteA</object-name>
    <object-name>porteB</object-name>
    <object-name>cargoA</object-name>
    <object-name>cargoB</object-name>
    <object-name>antennes</object-name>

    <object-name>sorties</object-name>
    <object-name>trous</object-name>
    <object-name>cables</object-name>
    
    <!-- Objets transparents -->
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG1</object-name>
    <object-name>voletG2</object-name>
    <object-name>voletD1</object-name>
    <object-name>voletD2</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteurs</object-name>
    <object-name>air</object-name>
    <object-name>porteA</object-name>
    <object-name>porteB</object-name>
    <object-name>cargoA</object-name>
    <object-name>cargoB</object-name>
    <object-name>antennes</object-name>

    <object-name>sorties</object-name>
    <object-name>trous</object-name>
    <object-name>cables</object-name>
    
    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>
  </animation>

  <effect>
    <inherits-from>Aircraft/DC3-neo/Models/Effects/Specular/bumpspec-fuselage</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG1</object-name>
    <object-name>voletG2</object-name>
    <object-name>voletD1</object-name>
    <object-name>voletD2</object-name>
    <object-name>ailes2</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>moteurs</object-name>
    <object-name>air</object-name>
    <object-name>porteA</object-name>
    <object-name>porteB</object-name>
    <object-name>cargoA</object-name>
    <object-name>cargoB</object-name>
    <object-name>antennes</object-name>
  </effect>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/DC3-neo/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitres</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>vitres</object-name>
  </effect>
  
  <!-- Immatriculatoin -->
  <model>
    <path>Aircraft/DC3-neo/Models/Immat/immat.xml</path>
  </model>

  <!-- Cabine -->
  <model>
    <path>Aircraft/DC3-neo/Models/Interior/cabine.xml</path>
  </model>

  <!-- Moteurs -->
  <model>
    <path>Aircraft/DC3-neo/Models/Engines/engineG.xml</path>
    <offsets>
      <x-m> -6.542 </x-m>
      <y-m> -2.814 </y-m>
      <z-m> -1.189 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DC3-neo/Models/Engines/engineD.xml</path>
    <offsets>
      <x-m> -6.542 </x-m>
      <y-m>  2.814 </y-m>
      <z-m> -1.189 </z-m>
    </offsets>
  </model>

  <animation>
    <type>material</type>
    <object-name>pale1</object-name>
    <object-name>pale2</object-name>
    <object-name>pale3</object-name>
    <object-name>bol</object-name>

    <property-base>sim/model/livery-engine</property-base>
    <texture-prop>texture</texture-prop>
    <texture>Engines/Propeller/propeller.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>
  </animation>

  <!-- Ailettes -->
  <model>
    <path>Aircraft/DC3-neo/Models/ailettesL.xml</path>
    <offsets>
      <x-m> -6.040 </x-m>
      <y-m> -2.814 </y-m>
      <z-m> -1.195 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DC3-neo/Models/ailettesR.xml</path>
    <offsets>
      <x-m> -6.040 </x-m>
      <y-m>  2.814 </y-m>
      <z-m> -1.195 </z-m>
    </offsets>
  </model>

  <!-- Cranking effects -->
  <!-- Left -->
  <model>
    <path>Aircraft/DC3-neo/Models/Effects/cranking/crankingL.xml</path>
    <offsets>
      <x-m> -4.873 </x-m>
      <y-m> -3.393 </y-m>
      <z-m> -1.559 </z-m>
      <pitch-deg>    35 </pitch-deg>
      <heading-deg> -10 </heading-deg>
    </offsets>
  </model>

  <model>
    <path>Aircraft/DC3-neo/Models/Effects/cranking/crankingR.xml</path>
    <offsets>
      <x-m> -4.873 </x-m>
      <y-m>  3.393 </y-m>
      <z-m> -1.559 </z-m>
      <pitch-deg>   35 </pitch-deg>
      <heading-deg> 10 </heading-deg>
    </offsets>
  </model>

  <!-- Lighting -->
  <model>
    <path>Aircraft/DC3-neo/Models/Light/dc-3-lights.xml</path>
  </model>

  <!-- Gouvernes de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor>30</factor>
    <center>
     <x-m> 8.076 </x-m>
     <y-m> 0.000 </y-m>
     <z-m> 2.368 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> 8.724 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.107 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m>  -0.894 </x1-m>
      <y1-m> -13.695 </y1-m>
      <z1-m>   0.125 </z1-m>
      <x2-m>  -1.221 </x2-m>
      <y2-m>  -6.313 </y2-m>
      <z2-m>  -0.955 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m> -1.221 </x1-m>
      <y1-m>  6.313 </y1-m>
      <z1-m> -0.955 </z1-m>
      <x2-m> -0.894 </x2-m>
      <y2-m> 13.695 </y2-m>
      <z2-m>  0.125 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG2</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 40 </factor>
    <axis>
      <x1-m> -1.214 </x1-m>
      <y1-m> -6.313 </y1-m>
      <z1-m> -1.046 </z1-m>
      <x2-m> -1.214 </x2-m>
      <y2-m> -3.484 </y2-m>
      <z2-m> -1.476 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletG1</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 40 </factor>
    <axis>
      <x1-m> -1.214 </x1-m>
      <y1-m> -3.484 </y1-m>
      <z1-m> -1.476 </z1-m>
      <x2-m> -1.214 </x2-m>
      <y2-m> -0.142 </y2-m>
      <z2-m> -1.500 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD2</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 40 </factor>
    <axis>
      <x1-m> -1.214 </x1-m>
      <y1-m>  3.484 </y1-m>
      <z1-m> -1.476 </z1-m>
      <x2-m> -1.214 </x2-m>
      <y2-m>  6.313 </y2-m>
      <z2-m> -1.046 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD1</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 40 </factor>
    <axis>
      <x1-m> -1.214 </x1-m>
      <y1-m>  0.142 </y1-m>
      <z1-m> -1.500 </z1-m>
      <x2-m> -1.214 </x2-m>
      <y2-m>  3.484 </y2-m>
      <z2-m> -1.476 </z2-m>
    </axis>
  </animation>

  <!-- Animation des portes -->
  <animation>
    <type>rotate</type>
    <object-name>porteA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m> -7.519 </x1-m>
      <y1-m> -1.069 </y1-m>
      <z1-m> -0.383 </z1-m>
      <x2-m> -7.519 </x2-m>
      <y2-m> -1.076 </y2-m>
      <z2-m> -0.219 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteB</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor>  100 </factor>
    <axis>
      <x1-m>  2.037 </x1-m>
      <y1-m> -1.294 </y1-m>
      <z1-m> -0.362 </z1-m>
      <x2-m>  2.037 </x2-m>
      <y2-m> -1.300 </y2-m>
      <z2-m>  0.069 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>cargoA</object-name>
    <object-name>porteB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> -170 </factor>
    <axis>
      <x1-m>  1.865 </x1-m>
      <y1-m> -1.305 </y1-m>
      <z1-m> -0.366 </z1-m>
      <x2-m>  1.865 </x2-m>
      <y2-m> -1.308 </y2-m>
      <z2-m>  0.067 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>cargoB</object-name>
    <property>instrumentation/doors/cargo/position-norm</property>
    <factor> 170 </factor>
    <axis>
      <x1-m>  3.720 </x1-m>
      <y1-m> -1.122 </y1-m>
      <z1-m> -0.342 </z1-m>
      <x2-m>  3.720 </x2-m>
      <y2-m> -1.134 </y2-m>
      <z2-m>  0.039 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>porteA</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>dc3.CrewDoor.toggle();</script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>porteB</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>dc3.PassengerDoor.toggle();</script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>cargoA</object-name>
    <object-name>cargoB</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>dc3.CargoDoor.toggle();</script>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>

</PropertyList>
