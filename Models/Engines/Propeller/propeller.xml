<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    <params>
        <rpm>/engines/engine/rpm</rpm>
        <pitch>/engines/engine/pitch</pitch>
    </params>
    
    <path>propeller.ac</path>
    
    <animation>
        <object-name>bol</object-name>   
        <object-name>pale1</object-name>
        <object-name>pale2</object-name>
        <object-name>pale3</object-name>
        
        <object-name>propdisc</object-name>
        <object-name>propblur</object-name>
    </animation>
    
    
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>propdisc</object-name>
        <object-name>propblur</object-name>
    </effect>
    
    <animation>
        <name>helice</name>
        <object-name>bol</object-name>   
        <object-name>pale1</object-name>
        <object-name>pale2</object-name>   
        <object-name>pale3</object-name>
        <object-name>propdisc</object-name>
        <object-name>propblur</object-name>
    </animation>
    
    
    <!-- Mise en place des pales par défaut -->
    <animation>
        <type>select</type>
        <object-name>pale1</object-name>
        <object-name>pale2</object-name>   
        <object-name>pale3</object-name>
        <condition>
            <less-than>
                <property alias="../../../../params/rpm"/>
                <value>70</value>
            </less-than>
        </condition>
    </animation>
    
    <!-- Sélection Pales/disque en fonction de "RPM" -->
    <animation>
        <type>select</type>
        <object-name>propdisc</object-name>
        <condition>
            <greater-than>
                <property alias="../../../../params/rpm"/>
                <value>120</value>
            </greater-than>
        </condition>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>propblur</object-name>
        <condition>
            <and>
                <greater-than>
                    <property alias="../../../../../params/rpm"/>
                    <value>50</value>
                </greater-than>
                <less-than>
                    <property alias="../../../../../params/rpm"/>
                    <value>120</value>
                </less-than>
            </and>
        </condition>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>pale1</object-name>
        <property alias="../../params/pitch"/>
        <offset-deg>90</offset-deg>
        <factor>-1</factor>
        <axis>
            <x1-m> 0.00000 </x1-m>
            <y1-m> 0.00000 </y1-m>
            <z1-m> 0.00000 </z1-m>
            <x2-m> 0.00000 </x2-m>
            <y2-m> 0.00000 </y2-m>
            <z2-m> 0.13399 </z2-m>
        </axis>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>pale2</object-name>
        <property alias="../../params/pitch"/>
        <offset-deg>90</offset-deg>
        <factor>-1</factor>
        <axis>
            <x1-m>  0.00000 </x1-m>
            <y1-m>  0.00000 </y1-m>
            <z1-m>  0.00000 </z1-m>
            <x2-m>  0.00000 </x2-m>
            <y2-m>  0.11604 </y2-m>
            <z2-m> -0.06699 </z2-m>
        </axis>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>pale3</object-name>
        <property alias="../../params/pitch"/>
        <offset-deg>90</offset-deg>
        <factor>-1</factor>
        <axis>
            <x1-m>  0.00000 </x1-m>
            <y1-m>  0.00000 </y1-m>
            <z1-m>  0.00000 </z1-m>
            <x2-m>  0.00000 </x2-m>
            <y2-m> -0.10976 </y2-m>
            <z2-m> -0.07685 </z2-m>
        </axis>
    </animation>
    
    <!-- Rotation de l'hélice -->
    <animation>
        <type>spin</type>
        <object-name>helice</object-name>
        <property alias="../../params/rpm"/>
        <factor>-1</factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>
    
</PropertyList>
