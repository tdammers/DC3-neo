<?xml version="1.0"?>
<PropertyList>
    <filter>
        <type>gain</type>
        <output>controls/engines/engine[0]/feed_tank</output>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/left-valve</property>
                    <value>1</value>
                </equals>
            </condition>
            <value>3</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/left-valve</property>
                    <value>2</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/left-valve</property>
                    <value>3</value>
                </equals>
            </condition>
            <value>0</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/left-valve</property>
                    <value>4</value>
                </equals>
            </condition>
            <value>2</value>
        </input>
        <input>
            <value>-1</value>
        </input>
    </filter>
    <filter>
        <type>gain</type>
        <output>controls/engines/engine[1]/feed_tank</output>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/right-valve</property>
                    <value>1</value>
                </equals>
            </condition>
            <value>3</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/right-valve</property>
                    <value>2</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/right-valve</property>
                    <value>3</value>
                </equals>
            </condition>
            <value>0</value>
        </input>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/right-valve</property>
                    <value>4</value>
                </equals>
            </condition>
            <value>2</value>
        </input>
        <input>
            <value>-1</value>
        </input>
    </filter>

    <filter>
        <type>gain</type>
        <output>controls/engines/engine[0]/cutoff</output>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/left-valve</property>
                    <value>0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <less-than>
                    <property>controls/engine[0]/mixture</property>
                    <value>0.1</value>
                </less-than>
            </condition>
            <value>1</value>
        </input>
        <input>
            <value>0</value>
        </input>
    </filter>
    <filter>
        <type>gain</type>
        <output>controls/engines/engine[1]/cutoff</output>
        <input>
            <condition>
                <equals>
                    <property>controls/fuel/right-valve</property>
                    <value>0</value>
                </equals>
            </condition>
            <value>1</value>
        </input>
        <input>
            <condition>
                <less-than>
                    <property>controls/engine[1]/mixture</property>
                    <value>0.1</value>
                </less-than>
            </condition>
            <value>1</value>
        </input>
        <input>
            <value>0</value>
        </input>
    </filter>
</PropertyList>
